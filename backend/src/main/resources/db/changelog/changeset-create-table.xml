<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="carol">
        <createTable tableName="JOKENPO_MATCH">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="player1" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="player2" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="choice1" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="choice2" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="winner" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
